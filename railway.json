{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "./Dockerfile",
    "buildArgs": {
      "BASE_URL": "https://ticktuck-production.up.railway.app"
    }
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheck": {
      "path": "/",
      "intervalSeconds": 30,
      "timeoutSeconds": 5
    }
  }
}
